<form method="post" action="{{ path('shopping_list_delete', {'id': shopping_list.id}) }}"
      onsubmit="return confirm('Êtes vous sûr de vouloir supprimer cette liste de course ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shopping_list.id) }}">
    <button class="btn btn-sm btn-danger">Supprimer</button>
</form>
